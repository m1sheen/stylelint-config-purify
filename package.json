{
	"name": "stylelint-config-purify",
	"version": "1.1.0",
	"author": "m1sheen",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/m1sheen/stylelint-config-purify.git"
	},
	"license": "MIT",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"scripts": {
		"build": "tsup \"./src/index.js\" --format cjs,esm --dts --clean",
		"lint": "eslint && stylelint \"**/*.{css,scss}\"",
		"lint:fix": "eslint --fix && stylelint \"**/*.{css,scss}\" --fix"
	},
	"dependencies": {
		"stylelint-config-standard-scss": "^14.0.0",
		"stylelint-order": "^6.0.4",
		"stylelint-prettier": "^5.0.3",
		"stylelint-scss": "^6.11.1",
		"stylelint-semantic-groups": "^1.2.1"
	},
	"devDependencies": {
		"eslint": "^9.22.0",
		"eslint-config-purify": "^2.9.0",
		"globals": "^16.0.0",
		"prettier": "^3.5.3",
		"sass": "^1.86.0",
		"stylelint": "^16.16.0",
		"tsup": "^8.4.0",
		"typescript": "^5.8.2"
	},
	"engines": {
		"node": ">=18.12.0"
	},
	"files": [
		"dist",
		"LICENSE",
		"README.md"
	],
	"keywords": [
		"lint",
		"stylelint",
		"css",
		"scss",
		"purify",
		"config"
